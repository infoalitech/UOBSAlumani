{
    "name": "yourname/project",
    "description": "A PHP project using OOP and Twig",
    "type": "project",
    "require": {
        "twig/twig": "^3.19",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload"
        ]
    }
}
